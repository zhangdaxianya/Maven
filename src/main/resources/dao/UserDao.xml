<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--映射文件的地址需和接口同名-->
<mapper namespace="net.dgsr.dao.UserDao">

    <!--根据条件查询用户-->
    <select id="getUserByCondition" resultType="User" parameterType="User">
        select * from dbo.user_info
        <trim prefix="where" prefixOverrides="and | or">

            <if test="gender != null">
                and gender=#{gender}
            </if>

            <if test="userid != null">
                and userid=#{userid}
            </if>

        </trim>
    </select>


    <!--根据条件查看用户数量-->
    <select id="getAllUserCount" parameterType="User" resultType="int">
      select count(1) from dbo.user_info
      <trim prefix="where" prefixOverrides="and | or">
          <if test="gender != null">
              and gender=#{gender}
          </if>
      </trim>
    </select>


</mapper>